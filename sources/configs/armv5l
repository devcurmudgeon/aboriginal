# ARMv5 with vector floating point (vfp).  Should run about 25% faster than
# the armv4 image for integer stuff, and faster than that for floating point.
# Assuming you have at least ARMv5 hardware (which most stuff sold today is).

KARCH=arm
KERNEL_PATH=arch/${KARCH}/boot/zImage
GCC_FLAGS=
BINUTILS_FLAGS=
QEMU_TEST=$KARCH
emulator_command()
{
  echo qemu-system-arm -M versatilepb -nographic -no-reboot -hda "$1" \
	-kernel "$2" -append "\"$3 root=/dev/sda console=ttyAMA0\"" \
	-net nic,model=rtl8139 -net user
}

# Write out uClibc .config file.

cat > "${WORK}"/miniconfig-uClibc << 'EOF'
TARGET_arm=y
ARCH_WANTS_LITTLE_ENDIAN=y
ARCH_HAS_MMU=y
ARCH_USE_MMU=y
UCLIBC_HAS_FLOATS=y
UCLIBC_HAS_FPU=y
DOPIC=y
HAVE_SHARED=y
LDSO_LDD_SUPPORT=y
LDSO_CACHE_SUPPORT=y
UCLIBC_STATIC_LDCONFIG=y
LDSO_RUNPATH=y
UCLIBC_CTOR_DTOR=y
UCLIBC_HAS_THREADS=y
LINUXTHREADS_OLD=y
UCLIBC_HAS_LFS=y
MALLOC_GLIBC_COMPAT=y
UCLIBC_DYNAMIC_ATEXIT=y
UCLIBC_SUSV3_LEGACY=y
UCLIBC_HAS_SHADOW=y
UCLIBC_HAS___PROGNAME=y
